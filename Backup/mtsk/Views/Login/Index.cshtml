@model mtsk.ViewModel.LoginAndRegisterViewModel

<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap - MTSK</title>
    <link rel="shortcut icon" href="ico/mask.ico">
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/loginAndRegisterCSS/loginStyle.css">
</head>

<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="img/loginWallpaper.jpg" alt="login" class="login-card-img">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <div class="brand-wrapper">
                                <img src="img/maskeLogo.PNG" alt="logo" class="logo">
                            </div>
                            <p class="login-card-description">Giriş yapınız</p>
                            <form method="post" id="giris-yap">
                                <div class="form-group">
                                    <label for="txtEmail" class="sr-only">E-Posta</label>
                                    @Html.TextBoxFor(x => x.loginRequestMessage.userEmail, new { @class = "form-control", placeholder = "E-Posta adresinizi giriniz", type = "email", name = "UserEmail" })
                                </div>
                                <div class="form-group mb-4">
                                    <label for="txtPassword" class="sr-only">Şifre</label>
                                    @Html.TextBoxFor(x => x.loginRequestMessage.userPassword, new { @class = "form-control", placeholder = "Şifrenizi giriniz", type = "password", name = "UserPassword" })
                                </div>
                                @if (ViewBag.result != null)
                                {
                    <div class="alert alert-@ViewBag.alert" role="alert">
                        @ViewBag.result
                    </div>}
                                <button class="btn btn-block login-btn mb-4" type="submit">Giriş Yap</button>
                            </form>
                            <a href="#!" class="forgot-password-link">Şifreni mi unuttun?</a>
                            <p class="login-card-footer-text">
                                Hesabın yok mu? <a href="#!" class="text-reset" data-toggle="modal"
                                                   data-target="#staticBackdrop">Kayıt ol</a>
                            </p>
                            <nav class="login-card-footer-nav">
                                <a href="#!">Kullanım şartları.</a>
                                <a href="#!">Gizlilik Politikası</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Kullanıcı Kayıt Formu/Modal -->
        <form method="post" id="registerForm" class="was-validated">
            <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
                 aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="staticBackdropLabel">Kaydol</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="register-name" class="col-form-label">Adınız</label>
                                @Html.TextBoxFor(x => x.registerRequestMessage.userName, new { @class = "form-control", type = "text", name = "userName", id = "register-name", maxlength = "50", placeholder = "Adınız", required = "true" })
                            </div>
                            <div class="form-group">
                                <label for="register-surname" class="col-form-label">Soyadınız</label>
                                @Html.TextBoxFor(x => x.registerRequestMessage.userSurname, new { @class = "form-control", type = "text", name = "userSurname", id = "register-surname", maxlength = "50", placeholder = "Soyadınız", required = "true" })
                            </div>
                            <div class="form-group">
                                <label for="register-email" class="col-form-label">E-Mail</label>
                                @Html.TextBoxFor(x => x.registerRequestMessage.userEmail, new { @class = "form-control", type = "text", name = "userEmail", id = "register-email", maxlength = "100", placeholder = "E-MailAdresiniz@gmail.com", required = "true" })
                            </div>
                            <div class="form-group">
                                <label for="register-telephone" class="col-form-label">Telefon</label>
                                @Html.TextBoxFor(x => x.registerRequestMessage.userTelephone, new { @class = "form-control", type = "text", name = "userTelephone", id = "register-telephone", title = "Bu input'a sadece rakam girilebilir", placeholder = "Telefon numaranız", required = "true" })
                            </div>
                            <div class="form-group">
                                <label for="register-tcNo" class="col-form-label">TC Kimlik No</label>
                                @Html.TextBoxFor(x => x.registerRequestMessage.userTC, new { @class = "form-control", type = "text", name = "userTC", id = "register-tcNo", placeholder = "TC kimlik numaranız", title = "Bu input'a sadece 11 karakterli sayısal değer girilebilir", required = "true" })
                            </div>
                            <div class="form-group">
                                <label for="sexDropDown" class="col-form-label">Cinsiyet</label>
                                @Html.DropDownListFor(x => x.registerRequestMessage.userGender,
                                   new List<SelectListItem> {
                                   new SelectListItem { Value = "Erkek" , Text = "Erkek" },
                                   new SelectListItem { Value = "Kadın" , Text = "Kadın" }},
                                   new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="register-password" class="col-form-label">Şifre</label>
                                @Html.TextBoxFor(x => x.registerRequestMessage.userPassword, new { @class = "form-control", type = "password", name = "userPassword", id = "register-password", maxlength = "50", title = "En fazla 50 karakterlik değer girilebilir.", placeholder = "Şifreniz", required = "true" })
                            </div>
                            <div class="form-group">
                                <label for="register-Repeatpassword" class="col-form-label">Şifre Tekrar</label>
                                <input type="password" class="form-control" id="register-Repeatpassword" maxlength="50" title="En fazla 50 karakterlik değer girilebilir." placeholder="Şifre Tekrar"
                                       required>
                            </div>
                            <hr>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="onayCheck">
                                <label class="form-check-label text-dark" for="onayCheck">
                                    Kaydol düğmesine tıklayarak, <a href="#!">Koşullarımızı</a>, <a href="#!">Veri İlkemizi</a> ve <a href="#!">Çerezler İlkemizi</a> kabul etmiş olursun. Bizden SMS Bildirimleri alabilir ve bu
                                    bildirimleri istediğin zaman durdurabilirsin. Sms ve e-posta bildirimleri almak için tıklayınız.
                                </label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
            integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <script src="loginAndRegisterScript.js"></script>

</body>
</html>
